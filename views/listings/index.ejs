<% layout('layouts/boilerplate.ejs') -%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between; /* space-between for left/right alignment */
    margin-top: 1rem;
    gap: 1.5rem;
  }

  .filters {
    text-align: center;
    opacity: 0.7;
    transition: 0.2s ease;
  }

  .filters:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.05);
  }

  .filters p {
    font-size: 0.8rem;
    margin: 0;
  }

  .tax-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }

  .listing-link {
    text-decoration: none;
    color: inherit;
  }

  .listing-card {
    transition: 0.3s ease;
  }

  .listing-card:hover {
    transform: scale(1.02);
  }
</style>

<!-- FILTER BAR -->
<div id="filters">

  <!-- Left side filters -->
  <div style="display: flex; flex-wrap: wrap; gap: 1.5rem;">
    <div class="filters" data-filter="trending">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>

    <div class="filters" data-filter="rooms">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>

    <div class="filters" data-filter="cities">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic Cities</p>
    </div>

    <div class="filters" data-filter="mountains">
      <i class="fa-solid fa-mountain-sun"></i>
      <p>Mountains</p>
    </div>

    <div class="filters" data-filter="castles">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>

    <div class="filters" data-filter="pools">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing Pools</p>
    </div>

    <div class="filters" data-filter="camping">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>

    <div class="filters" data-filter="farms">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </div>

    <div class="filters" data-filter="arctic">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>

    <div class="filters" data-filter="domes">
      <i class="fa-solid fa-igloo"></i>
      <p>Domes</p>
    </div>

    <div class="filters" data-filter="boats">
      <i class="fa-solid fa-ship"></i>
      <p>Boats</p>
    </div>
  </div>

  <!-- Right side tax toggle -->
  <div class="tax-toggle">
    <span>Display total after Taxes</span>
    <div class="form-check form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        id="taxSwitch"
      >
    </div>
  </div>

</div>

<!-- LISTINGS GRID -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">

  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card h-100">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem; object-fit: cover;"
          />
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
              <span class="tax-info"> +18% GST</span>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>

</div>

<!-- TAX TOGGLE SCRIPT -->
<script>
  const taxSwitch = document.getElementById("taxSwitch");
  const taxInfos = document.getElementsByClassName("tax-info");

  taxSwitch.addEventListener("change", () => {
    for (let info of taxInfos) {
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  });
</script>
